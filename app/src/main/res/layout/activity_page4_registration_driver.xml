<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page4RegistrationDriver"
    android:background="@drawable/register_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvregDontopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="2dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/RegForm"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/tvnic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvregDontopic"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="NIC"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="86dp" />

            <EditText
                android:id="@+id/etNICd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvregDontopic"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/tvfname"
                android:ems="10"
                android:hint="Enter NIC"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="112dp" />

            <TextView
                android:id="@+id/tvfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvnic"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:text="@string/tvfname"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="86dp" />

            <EditText
                android:id="@+id/etfnamed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvnic"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/tvfname"
                android:ems="10"
                android:hint="@string/hintfName"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="112dp" />

            <TextView
                android:id="@+id/tvlname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etfnamed"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/tvlname"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="86dp" />

            <EditText
                android:id="@+id/etlnamed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etfnamed"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/tvlname"
                android:ems="10"
                android:hint="@string/hintfName"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="112dp" />

            <TextView
                android:id="@+id/tvemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etlnamed"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/tvemail"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="227dp" />

            <EditText
                android:id="@+id/etemaild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etlnamed"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/tvemail"
                android:ems="10"
                android:hint="@string/hintEmail"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="112dp" />

            <TextView
                android:id="@+id/tvConNumber"
                android:layout_width="111dp"
                android:layout_height="23dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/etemaild"
                android:text="@string/tvContactNumber"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="304dp" />

            <EditText
                android:id="@+id/etConnumd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etemaild"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/tvConNumber"
                android:ems="10"
                android:hint="@string/hintConNumber"
                android:inputType="phone"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="297dp" />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etConnumd"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/tvAddress"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="346dp" />

            <EditText
                android:id="@+id/etAdderessd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etConnumd"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/tvAddress"
                android:ems="10"
                android:inputType="textPostalAddress"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="379dp" />

            <TextView
                android:id="@+id/tvregVehtopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etAdderessd"
                android:gravity="center"
                android:text="@string/RegFormVeh"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="40dp" />

            <TextView
                android:id="@+id/tvVehNum"
                android:layout_width="111dp"
                android:layout_height="23dp"
                android:layout_below="@id/tvregVehtopic"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/tvVehNum"
                tools:layout_editor_absoluteX="7dp"
                tools:layout_editor_absoluteY="304dp" />

            <EditText
                android:id="@+id/etVehNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvregVehtopic"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@id/tvVehNum"
                android:ems="10"
                android:inputType="text"
                tools:layout_editor_absoluteX="135dp"
                tools:layout_editor_absoluteY="297dp" />

            <TextView
                android:id="@+id/tvColour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etVehNum"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/tvColour"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="346dp" />

            <EditText
                android:id="@+id/etColour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etVehNum"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@id/tvColour"
                android:ems="10"
                android:inputType="textPostalAddress"
                tools:layout_editor_absoluteX="9dp"
                tools:layout_editor_absoluteY="379dp" />

            <TextView
                android:id="@+id/tvVehType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvVehicleType"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/etColour"
                tools:layout_editor_absoluteX="12dp"
                tools:layout_editor_absoluteY="346dp" />

            <EditText
                android:id="@+id/etVehType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/etColour"
                android:layout_toEndOf="@id/tvVehType"/>


            <Button
                android:id="@+id/btnSubmitDr"
                android:layout_width="243dp"
                android:layout_height="57dp"
                android:layout_below="@id/etVehType"
                android:layout_centerHorizontal="true"
                android:background="@color/btnBackground"
                android:backgroundTint="@color/btnclr"
                android:drawableTint="#000000"
                android:text="@string/btnSubmit"
                android:textColor="@color/LoginHintColor"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="607dp" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>