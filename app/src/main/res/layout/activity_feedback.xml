<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Feedback">

    <ScrollView
    android:id="@+id/scrollView2"
    android:layout_width="326dp"
    android:layout_height="588dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.494"
    app:layout_constraintStart_toStartOf="parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="313dp"
            android:layout_height="120dp"
            android:layout_marginTop="59dp"
            android:layout_marginBottom="43dp"
            android:background="#bac4ca">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="313dp"
                android:layout_height="36dp"
                android:backgroundTint="#BBDED6"
                android:text="@string/etfeedback"
                android:textColorLink="#3a3ea3"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="313dp"
                android:layout_height="39dp"
                android:backgroundTint="#BBDED6"
                android:text="@string/etfeedback2"
                android:textColorLink="#0b234f" />

        </com.google.android.material.chip.ChipGroup>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_below="@id/chipGroup"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:textColor="@color/black"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="313dp"
            android:layout_height="48dp"
            android:layout_below="@id/editTextTextPersonName"
            android:layout_marginBottom="13dp"
            android:ems="10"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:inputType="textEmailAddress" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText2"
            android:layout_width="316dp"
            android:layout_height="100dp"
            android:layout_below="@id/editTextTextEmailAddress"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#F7F6F6"
            android:hint="Message"
            android:textColorHint="@color/black"/>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="125dp"
            android:layout_height="53dp"
            android:layout_marginBottom="128dp"
            android:backgroundTint="#f28500"
            android:gravity="center"
            android:text="@string/btnSend"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@id/textInputEditText2"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>