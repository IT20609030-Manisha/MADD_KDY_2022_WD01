<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page9AddVacancies">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/tvLoc"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvPostVacancies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="@string/tvPostVacancies"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/tvVacancyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvPostVacancies"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/tvVacancyType" />

            <RadioGroup
                android:id="@+id/Rbtngrp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvVacancyType"
                android:paddingStart="100dp">

                <RadioButton
                    android:id="@+id/Rbtn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="rbClick"
                    android:text="@string/tvRbtn1" />

                <RadioButton
                    android:id="@+id/Rbtn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="rbClick"
                    android:text="@string/tvRbtn2" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvVacLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Rbtngrp1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp"
                android:text="@string/tvVacLoc" />

            <EditText
                android:id="@+id/etLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvVacLoc"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tvVehType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etLocation"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:text="@string/tvVehicleType" />

            <EditText
                android:id="@+id/etVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvVehType"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVacAvailability"
                android:layout_below="@id/etVehicleType"
                android:text="@string/tvAvail"
                android:padding="10dp"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/etAvail"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/tvVacAvailability"
                android:layout_below="@id/etVehicleType"
                android:ems="10"
                android:inputType="number" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/etAvail"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="@string/btnSubmit" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>