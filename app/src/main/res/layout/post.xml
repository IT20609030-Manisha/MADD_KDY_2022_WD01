<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/postDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/imageviewPost"
            android:layout_width="406dp"
            android:layout_height="261dp"
            android:layout_below="@id/postDes"
            android:layout_marginBottom="116dp"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageButton
            android:id="@+id/imgbtnheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="336dp"
            android:layout_toEndOf="@+id/imgbtnthumb"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <ImageButton
            android:id="@+id/imgbtnthumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="334dp"
            app:srcCompat="@drawable/ic_baseline_thumb_up_24" />

        <ImageButton
            android:id="@+id/imgbtnmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="335dp"
            android:layout_marginEnd="84dp"
            app:srcCompat="@drawable/ic_baseline_message_24" />

        <EditText
            android:id="@+id/etcomment"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgbtnheart"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:hint="Enter your comment"
            android:padding="10dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imgbtnsend"
            android:layout_width="74dp"
            android:layout_height="58dp"
            android:layout_below="@id/imgbtnmsg"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-6dp"
            android:layout_toEndOf="@id/etcomment"
            app:srcCompat="@drawable/ic_baseline_send_24" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>